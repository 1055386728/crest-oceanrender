root = true

[*.{cs, hlsl, shader, cginc, md, markdown}]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{md,markdown}]
trim_trailing_whitespace = false

[*.{cs}]
curly_bracket_next_line = true ; not widely supported, but signals cleary what the standard is
